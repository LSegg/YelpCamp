<% layout('layouts/boilerplate') %>
<h1>Login</h1>
<form class="validated-form" action="/login" method="POST" novalidate>
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please write a username.</div>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
            class="form-control"
            type="password"
            id="password"
            name="password"
            required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please write a valid password.</div>
    </div>
    <button class="btn btn-success">Login</button>
</form>
